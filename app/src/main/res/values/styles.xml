<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="about_title_style">
        <item name="android:textSize">15.0sp</item>
        <item name="android:textColor">@color/more_subtitle</item>
        <item name="android:layout_marginBottom">5.0dip</item>
    </style>

    <style name="theme_dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="about_content_style">
        <item name="android:textSize">@dimen/text_normal_size</item>
        <item name="android:background">@drawable/detailpanel_bg</item>
        <item name="android:padding">15.0dip</item>
    </style>

    <style name="top_bg_style">
        <item name="android:background">@drawable/top_bg_blue</item>
    </style>

    <style name="bg_style">
        <item name="android:background">@color/color_bg</item>
    </style>

    <style name="AnimationPreview">
        <item name="android:windowEnterAnimation">@anim/zoomin</item>
        <item name="android:windowExitAnimation">@anim/zoomout</item>
    </style>

    <style name="AppBaseTheme" parent="android:Theme.Light">
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    

    <style name="MyCheckBox" parent="@android:style/Widget.CompoundButton.CheckBox"></style>

    <style name="main_tab_bottom">

        <!-- 底部标签的样式 -->
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:button">@null</item>
        <item name="android:singleLine">true</item>
        <item name="android:drawablePadding">2dp</item>
        <item name="android:layout_weight">1.0</item>
    </style>

    <style name="CheckBox" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/checkbox_selector</item>
    </style>

    <style name="content_page_large_text">
        <item name="android:duplicateParentState">true</item>
        <item name="android:textSize">16.0dip</item>
        <item name="android:typeface">sans</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_color_default</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="list_item_single">
        <item name="android:paddingTop">10dip</item>
        <item name="android:paddingBottom">10dip</item>
        <item name="android:paddingLeft">10dip</item>
        <item name="android:paddingRight">10dip</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@drawable/background_view_rounded_single</item>
    </style>

    <style name="list_item_singles">
        <item name="android:paddingTop">10dip</item>
        <item name="android:paddingBottom">10dip</item>
        <item name="android:paddingLeft">10dip</item>
        <item name="android:paddingRight">10dip</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@drawable/background_comm_single</item>
    </style>

    <!-- 自定义Dialog风格 -->
    <style name="Theme_dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@drawable/dia_sytle</item>
    </style>

    <style name="StyledIndicators" parent="@android:style/Theme.Light">
        <item name="vpiTabPageIndicatorStyle">@style/CustomTabPageIndicator</item>
    </style>

    <style name="CustomTabPageIndicator" parent="Widget.TabPageIndicator">
        <item name="android:background">@drawable/contrl_tab_indicator</item>
        <item name="android:textAppearance">@style/CustomTabPageIndicator.Text</item>
        <item name="android:textSize">14sp</item>
        <item name="android:dividerPadding">8dp</item>
        <item name="android:showDividers">middle</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:fadingEdge">horizontal</item>
        <item name="android:fadingEdgeLength">8dp</item>
    </style>

    <style name="CustomTabPageIndicator.Text" parent="android:TextAppearance.Medium">
        <item name="android:typeface">monospace</item>
        <item name="android:textColor">@drawable/selector_tabtext</item>
    </style>

    <style name="AddToAreaCheckBox" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/checkbox_addtoarea</item>
    </style>

    <style name="SwitchCheckBox" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/checkbox_switch</item>
        <item name="android:width">60dp</item>
    </style>

    <style name="MyDialog" parent="@android:Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/dialog_bg</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="ColorPickerDialog" parent="Theme_dialog">
        <item name="android:windowTitleStyle">@style/ColorPickerDialogTitle</item>
        <item name="android:background">#ffffff</item>
    </style>

    <style name="ColorPickerDialogTitle" parent="@android:style/TextAppearance.DialogWindowTitle">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textColor">#28a465</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="progressbar_horizontal">
        <item name="android:maxHeight">30.5dip</item>
        <item name="android:indeterminateOnly">false</item>
        <item name="android:indeterminateDrawable">@android:drawable/progress_indeterminate_horizontal</item>
        <item name="android:progressDrawable">@drawable/progress_horizontal</item>
        <item name="android:minHeight">30.5dip</item>
    </style>

    <style name="Theme.picker" parent="android:Theme.Holo.Light">
        <item name="android:editTextStyle">@style/Widget.EditText.White</item>
    </style>
    <style name="Widget.EditText.White" parent="@android:style/Widget.EditText">
        <item name="android:textColor">@color/color_blue</item>
    </style>

    <style name="sys_set_preacitivity">
        <item name="android:focusable">false</item>
        <item name="android:textColor">#ff000000</item>
        <item name="android:cacheColorHint">#ffffffff</item>
        <item name="android:windowNoTitle">false</item>
    </style>

</resources>