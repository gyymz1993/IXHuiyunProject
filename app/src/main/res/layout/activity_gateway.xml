<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F3F3F3"
    android:orientation="vertical" >

    <LinearLayout 
        android:layout_width="match_parent"
    	android:layout_height="0dip"
    	android:layout_weight="9"
    	android:orientation="vertical" >
        
        <RelativeLayout
	        android:id="@+id/top_relative"
	        android:layout_width="fill_parent"
	        android:layout_height="50.0dip"
	        android:background="#28A465" >

	        <ImageView
	            android:id="@+id/tv_menu"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_centerVertical="true"
	            android:layout_marginLeft="15dp"
	            android:clickable="true"
	            android:focusable="true"
	            android:onClick="showMenu"
	            android:paddingLeft="10dp"
	            android:paddingRight="10dp"
	            android:singleLine="true"
	            android:src="@drawable/menu" />
	
	        <TextView
	            android:id="@+id/tv_title"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_centerInParent="true"
	            android:padding="10.0dip"
	            android:paddingLeft="80dp"
	            android:singleLine="true"
	            android:text="网关配置"
	            android:textColor="#FFFFFF"
	            android:textSize="20sp" />
	
	        <TextView
	            android:id="@+id/tv_return"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_alignParentRight="true"
	            android:layout_centerVertical="true"
	            android:layout_marginRight="30dp"
	            android:text="返回"
	            android:textColor="@drawable/textview_bg"
	            android:textSize="20dp" />
	    </RelativeLayout>
    
	    <LinearLayout
	        android:id="@+id/title_relative"
	        android:layout_width="fill_parent"
	        android:layout_height="50dp"
	        android:layout_marginLeft="10dp"
	        android:layout_marginRight="10dp"
	        android:layout_marginTop="10dp"
	        android:background="@drawable/image_tiele"
	        android:orientation="horizontal" >
	
	        <TextView
	            android:id="@+id/tv_title_area"
	            style="@style/layout_horizontal"
	            android:layout_marginLeft="0dp"
	            android:layout_weight="1"
	            android:focusable="true"
	            android:focusableInTouchMode="true"
	            android:gravity="center"
	            android:singleLine="true"
	            android:text="区域" />
	
	        <TextView
	            android:id="@+id/tv_title_name"
	            style="@style/layout_horizontal"
	            android:layout_marginLeft="3dp"
	            android:layout_weight="1"
	            android:gravity="center"
	            android:singleLine="true"
	            android:text="设备" />
	
	        <TextView
	            android:id="@+id/tv_title_comm"
	            style="@style/layout_horizontal"
	            android:layout_marginLeft="3dp"
	            android:layout_weight="1"
	            android:gravity="center"
	            android:singleLine="true"
	            android:text="通讯" />
	
	        <TextView
	            android:id="@+id/tv_title_type"
	            style="@style/layout_horizontal"
	            android:layout_marginLeft="3dp"
	            android:layout_weight="1"
	            android:gravity="center"
	            android:text="类型" />
	
	        <TextView
	            android:id="@+id/tv_title_exec"
	            style="@style/layout_horizontal"
	            android:layout_marginLeft="3dp"
	            android:layout_weight="1"
	            android:gravity="center"
	            android:text="执行\n器号" />
	        
	        <TextView
	            android:id="@+id/tv_title_switch"
	            style="@style/layout_horizontal"
	            android:layout_marginLeft="3dp"
	            android:layout_weight="1"
	            android:gravity="center"
	            android:text="开关\n编号" />
	        
	    </LinearLayout>
	    
	    <ListView
	        android:id="@+id/lv_gateway_info"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="7dp"
	        android:layout_marginRight="7dip"
	        android:layout_marginTop="5dip"
	        android:layout_weight="1"
	        android:descendantFocusability="afterDescendants"
	        android:divider="@null"
	        android:listSelector="#00000000" >
	    </ListView>

	</LinearLayout>

    <LinearLayout
        android:id="@+id/ll_button"
        android:layout_width="match_parent"
        android:layout_height="0dip"
    	android:layout_weight="1"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal" >
        
        <Button
	        android:id="@+id/btn_add"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:layout_margin="10dp"
	        android:background="@drawable/btn_shape"
	        android:onClick="reSeach"
	        android:paddingBottom="10dp"
	        android:paddingTop="10dp"
	        android:text="增加"
	        android:textColor="#ffffff"
	        android:textSize="18sp" />
        
        <Button
	        android:id="@+id/btn_save"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:layout_margin="10dp"
	        android:background="@drawable/btn_shape"
	        android:onClick="reSeach"
	        android:paddingBottom="10dp"
	        android:paddingTop="10dp"
	        android:text="完成"
	        android:textColor="#ffffff"
	        android:textSize="18sp" />
	        
    </LinearLayout>

</LinearLayout>
