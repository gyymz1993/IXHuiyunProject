<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center" >

    <TextView
        android:id="@+id/tv_voice"
        android:layout_width="wrap_content"
        android:layout_height="60sp"
        android:background="@drawable/vioce_test"  
        android:gravity="center"
        android:paddingLeft="15sp"
        android:textColor="#ffffff"
        android:text="0001"
        android:textSize="12sp" />

    <ImageView
        android:id="@+id/ib_voice"
        android:layout_width="wrap_content"
        android:layout_height="60sp"
        android:layout_alignBottom="@+id/tv_voice"
        android:layout_alignLeft="@+id/tv_voice"
        android:layout_toRightOf="@+id/tv_voice"
        android:paddingLeft="3sp"
        android:src="@drawable/vioce_icon" />

</RelativeLayout>