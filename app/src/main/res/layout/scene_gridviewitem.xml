<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/layout_full"
    android:background="@color/ix_bg_whitegray"
    android:gravity="center"
    android:orientation="vertical" >

    <Button
        android:id="@+id/scene_delete"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:text="@string/door"
        android:textSize="20sp"
        android:visibility="gone" />

    <FrameLayout
        android:id="@+id/starred_item_layout"
        style="@style/layout_wrap" >

        <ImageView
            android:id="@+id/scene_img_bg"
            style="@style/layout_full"
            android:layout_gravity="center"
            android:layout_marginBottom="30dip"
            android:layout_marginLeft="30dip"
            android:layout_marginRight="30dip"
            android:layout_marginTop="30dip"
            android:contentDescription="@string/content_description_default" />
      
        <TextView
            android:id="@+id/scene_tv_name"
            style="@style/layout_wrap"
            android:layout_gravity="center|bottom"
            android:paddingTop="20dp"
            android:paddingBottom="10dp"
            android:text="@string/door"
            android:textColor="#969696"
            android:textSize="15sp" />
    </FrameLayout>

</LinearLayout>