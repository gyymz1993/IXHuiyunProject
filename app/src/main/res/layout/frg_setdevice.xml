<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:lzy="http://schemas.android.com/apk/res/com.ixhuiyunproject"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F3F3F3"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/ix_green" >

        <ImageView
            android:id="@+id/iv_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:clickable="true"
            android:focusable="true"
            android:onClick="setBack"
            android:paddingLeft="10dip"
            android:paddingRight="10dip"
            android:singleLine="true"
            android:src="@drawable/back_white" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="设置"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="30dp"
            android:clickable="true"
            android:focusable="true"
            android:textColor="#ffffff"
            android:textSize="20dip" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <LinearLayout
            style="@style/layout_full"
            android:orientation="vertical"
            android:paddingBottom="8dip"
            android:paddingTop="35dip" >

            <com.huiyun.ixconfig.view.SettingItemRLView
                android:id="@+id/set_device"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                lzy:item_name="设备设置"
                lzy:logo_src="@drawable/set_icon_device" >
            </com.huiyun.ixconfig.view.SettingItemRLView>

            <com.huiyun.ixconfig.view.SettingItemRLView
                android:id="@+id/set_usera"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                lzy:item_name="普通用户注册"
                lzy:logo_src="@drawable/set_ioc_user" />

            <com.huiyun.ixconfig.view.SettingItemRLView
                android:id="@+id/sett_com"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                lzy:item_name="组合设置"
                lzy:logo_src="@drawable/set_comm" />

            <com.huiyun.ixconfig.view.SettingItemRLView
                android:id="@+id/set_gaw"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dip"
                lzy:item_name="网关设置"
                lzy:logo_src="@drawable/set_gwy_icon" />

            <com.huiyun.ixconfig.view.SettingItemRLView
                android:id="@+id/set_area"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                lzy:item_name="区域设置"
                lzy:logo_src="@drawable/set_iconscene" />

            <com.huiyun.ixconfig.view.SettingItemRLView
                android:id="@+id/set_scence"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                lzy:item_name="场景设置"
                lzy:logo_src="@drawable/set_icon_scene" />

            <com.huiyun.ixconfig.view.SettingItemRLView
                android:id="@+id/set_remote"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dip"
                lzy:item_name="编辑遥控器"
                lzy:logo_src="@drawable/set_icon_remote" />

            <!-- <com.huiyun.ixconfig.view.SettingItemRLView
                android:id="@+id/set_find"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="0dip"
                lzy:item_name="查找设备"
                lzy:logo_src="@drawable/set_icon_find" /> -->

            <com.huiyun.ixconfig.view.SettingItemRLView
                android:id="@+id/set_slave"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dip"
                lzy:item_name="设备信息"
                lzy:logo_src="@drawable/set_icon_find" />

            <!-- <com.huiyun.ixconfig.view.SettingItemRLView
                android:id="@+id/add_device"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dip"
                android:paddingBottom="20dip"
                lzy:item_name="主动添加设备"
                lzy:logo_src="@drawable/set_comm" /> -->

            <com.huiyun.ixconfig.view.SettingItemRLView
                android:id="@+id/voice_test"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dip"
                lzy:item_name="语音测试"
                lzy:logo_src="@drawable/set_voice" />

            <com.huiyun.ixconfig.view.SettingItemRLView
                android:id="@+id/alarm_test"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dip"
                lzy:item_name="定时测试"
                lzy:logo_src="@drawable/set_alarm" 
                android:visibility="gone"
                />

            <com.huiyun.ixconfig.view.SettingItemRLView
                android:id="@+id/alarm_query"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dip"
                lzy:item_name="定时"
                lzy:logo_src="@drawable/set_alarm" />
            
             <com.huiyun.ixconfig.view.SettingItemRLView
                android:id="@+id/set_wifi"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                lzy:item_name="设置主机WIFI"
                lzy:logo_src="@drawable/set_wifi" />
             
             <com.huiyun.ixconfig.view.SettingItemRLView
                android:id="@+id/set_wtr_wifi"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                lzy:item_name="设置中继器WIFI"
                lzy:logo_src="@drawable/set_wifi" />
             
             <com.huiyun.ixconfig.view.SettingItemRLView
                android:id="@+id/set_key"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dip"
                android:paddingBottom="20dip"
                lzy:item_name="设置主机KEY"
                lzy:logo_src="@drawable/set_key" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>