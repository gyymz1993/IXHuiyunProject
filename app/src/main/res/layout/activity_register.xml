<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/layout_full"
    android:background="@drawable/login_bg"
    android:orientation="vertical" >

    <LinearLayout
        style="@style/layout_vertical"
        android:layout_weight="1"
        android:gravity="center" >

        <ImageView
            style="@style/layout_wrap"
            android:layout_gravity="center" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lay_user"
        style="@style/layout_vertical"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:orientation="vertical" >

        <RelativeLayout
            style="@style/layout_vertical"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:orientation="vertical" >

            <EditText
                android:id="@+id/ed_user"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginBottom="5.0px"
                android:layout_marginLeft="20dip"
                android:layout_marginRight="20dip"
                android:layout_marginTop="5.0dip"
                android:background="@drawable/login_edit"
                android:hint="用户名"
                android:maxLength="10"
                android:paddingLeft="15.0sp"
                android:saveEnabled="true"
                android:textColor="#ffffffff"
                android:textColorHint="#ffffffff" />

            <TextView
                android:id="@+id/TextView01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/ed_user"
                android:layout_alignLeft="@+id/ed_user"
                android:layout_alignTop="@+id/ed_user"
                android:layout_marginRight="15.0sp"
                android:gravity="center_vertical"
                android:paddingLeft="7.0sp"
                android:text="用户名"
                android:textColor="#ffffffff"
                android:textSize="16.0dip"
                android:visibility="gone" />
        </RelativeLayout>

        <RelativeLayout
            style="@style/layout_vertical"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:gravity="top"
            android:orientation="vertical" >

            <EditText
                android:id="@+id/ed_pwd"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="5.0px"
                android:layout_marginLeft="20dip"
                android:layout_marginRight="20dip"
                android:layout_marginTop="5.0dip"
                android:background="@drawable/login_edit"
                android:ems="10"
                android:hint="密码"
                android:inputType="textPassword"
                android:paddingLeft="15.0sp"
                android:saveEnabled="true"
                android:textColor="#ffffffff"
                android:textColorHint="#ffffffff" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_alignBottom="@+id/ed_pwd"
                android:layout_alignLeft="@+id/ed_pwd"
                android:layout_alignTop="@+id/ed_pwd"
                android:layout_marginRight="15.0sp"
                android:gravity="center_vertical"
                android:paddingLeft="7.0sp"
                android:text="密   码 "
                android:textColor="#ffffffff"
                android:textSize="16.0dip"
                android:visibility="gone" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/lay_master"
            style="@style/layout_vertical"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:gravity="top"
            android:orientation="vertical" >

            <EditText
                android:id="@+id/ed_master"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginBottom="5.0px"
                android:layout_marginLeft="20dip"
                android:layout_marginRight="20dip"
                android:layout_marginTop="5.0dip"
                android:background="@drawable/login_edit"
                android:hint="I  D"
                android:maxLength="10"
                android:paddingLeft="15.0sp"
                android:saveEnabled="true"
                android:textColor="#ffffffff"
                android:textColorHint="#ffffffff" 
                android:text="8720395155527049066BFF48"
                />

            <!-- test 8720395155527049066BFF48   master 87214155564978500670ff48 -->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_alignBottom="@+id/ed_master"
                android:layout_alignLeft="@+id/ed_master"
                android:layout_alignTop="@+id/ed_master"
                android:layout_marginRight="15.0sp"
                android:gravity="center_vertical"
                android:paddingLeft="7.0sp"
                android:text="   I  D   "
                android:textColor="#ffffffff"
                android:textSize="16.0dip"
                android:visibility="gone" />
        </RelativeLayout>
    </LinearLayout>
    <!-- android:text="8721405256497850066bff48" -->

    <LinearLayout
        style="@style/layout_height_wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/lay_login"
            style="@style/layout_height_wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="invisible" >

            <TextView
                android:id="@+id/local_login"
                style="@style/layout_wrap"
                android:text="本地登录		"
                android:textColor="#969696"
                android:textSize="23dp" />

            <TextView
                style="@style/layout_wrap"
                android:text="	|	"
                android:textColor="#969696"
                android:textSize="23dp" />

            <TextView
                android:id="@+id/remote_login"
                style="@style/layout_wrap"
                android:onClick="registerUser"
                android:text="       远程登录"
                android:textColor="#969696"
                android:textSize="23dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lay_login"
            style="@style/layout_height_wrap_content"
            android:layout_marginBottom="25dp"
            android:gravity="center"
            android:orientation="vertical" >

            <Button
                android:id="@+id/btn_login"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/edit_login_selector"
                android:text="本地注册"
                android:textColor="#ffffffff"
                android:textSize="23dp" />

            <RelativeLayout
                android:id="@+id/lay_text"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center_horizontal" >

                <TextView
                    android:id="@+id/tx_user_tag"
                    style="@style/layout_wrap"
                    android:text="用户"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/btn_regin"
                    style="@style/layout_wrap"
                    android:layout_toRightOf="@+id/tx_user_tag"
                    android:onClick="registerUser"
                    android:text="登录"
                    android:textColor="#f9ff9d"
                    android:textSize="16sp" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>