<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dip"
    android:background="@drawable/bg"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="0dip"
        android:layout_height="fill_parent"
        android:layout_marginLeft="5dip"
        android:layout_marginTop="3dip"
        android:layout_weight="5"
        android:gravity="center"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/switch_logo"
            android:layout_width="50dip"
            android:layout_height="50dip"
            android:layout_marginBottom="10dip"
            android:layout_marginTop="10dip"
            android:src="@drawable/contrl_window" />

        <TextView
            android:id="@+id/switch_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dip"
            android:layout_marginRight="7dip"
            android:text="00000001" />

        <Button
            android:id="@+id/switch_on"
            android:layout_width="60dip"
            android:layout_height="30dip"
            android:layout_marginLeft="7dip"
            android:layout_marginRight="2dip"
            android:background="@drawable/window_on"
            android:textColor="#ffffff" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dip"
        android:layout_height="fill_parent"
        android:layout_marginRight="10dip"
        android:layout_marginTop="3dip"
        android:layout_weight="3"
        android:gravity="center"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/switch_off"
            android:layout_width="60dip"
            android:layout_height="30dip"
            android:layout_marginLeft="7dip"
            android:layout_marginRight="7dip"
            android:background="@drawable/window_off"
            android:textColor="#ffffff" />
    </LinearLayout>

</LinearLayout>